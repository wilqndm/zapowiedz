{
      "compilerOptions": {
        "target": "ES2022",
        "lib": ["dom", "dom.iterable", "es2022"],
        "allowJs": false,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "jsx": "preserve",
        "incremental": true,
        "types": ["node", "react", "react-dom"],
        "baseUrl": ".",
        "paths": {
          "@/*": ["*"]
        }
      },
      "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
      "exclude": ["node_modules"]
    }
